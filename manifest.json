{
  "manifest_version": 3,
  "name": "TabNest",
  "version": "1.1.2",
  "description": "Save multiple tabs for later and reopen them with a single click.",
  "icons": {	
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"	
  },
  "action": {
    "default_icon": "icon32.png",
    "default_popup": "popup.html",
    "default_title": "TabNest"
  },
  "permissions": [
    "tabs",
    "storage",
	"tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
